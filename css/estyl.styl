azul = #22BCE0
color_header = #800038
gris_oscuro = #444
gris_texto = #7A7A7A

a 
	color color_header 

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
		background color_header
		color rgba(white, 0.5)
		padding 1em 0
		text-align center
		width 100%

		h3
			font-size 14px
			font-weight normal

			strong
				display block
			.mejor
				&:before
				&:after
					content " - "
						
header
	background color_header
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 55

	.logo

		width 175px

		img
			width 160px

	.buscador
		margin 0 80px 0 70px
		position relative


		.titulo
			font-size 18px
			font-weight normal
			margin 5px
			margin-left 20%
			padding 0
			font-style italic
			display inline-block
		
		.search
			margin-left 20%
			position relative
				
			#searchbox
				#search
					width: 190px;
					padding: 5px;
					border: 0;
					background: #eee;
					border-radius: 3px
					box-shadow: 0 1px 1px rgba(0,0,0,.4) inset;
					outline-color #3DC9FF
				#submit
					    background #0D98FB 
					    background-image -webkit-linear-gradient(top,#0D98FB,#1A5DB3)
					    background-image -moz-linear-gradient(top,#0D98FB,#1A5DB3)
					    background-image -o-linear-gradient(top,#0D98FB,#1A5DB3)  
					    background-image linear-gradient(to bottom,#0D98FB,#1A5DB3)   
					    border 1px solid #125CB5
					    -moz-border-radius 5px
					    -webkit-border-radius 5px
					    -o-border-radius 5px  
					    border-radius 5px
					    -moz-box-shadow 0 1px 1px #71C0FD inset
					    -webkit-box-shadow 0 1px 1px #71C0FD inset
					    -o-box-shadow 0 1px 1px #71C0FD inset 
					    box-shadow 0 1px 1px #71C0FD inset
					    padding .2em 1.5em
					    color white 
					    font-weight normal
					    text-decoration none
					    margin-top 2px

				#submit:hover
						background:#1A5DB3;
						background-image: -webkit-linear-gradient(bottom,#0D98FB,#1A5DB3);
						background-image: -moz-linear-gradient(bottom,#0D98FB,#1A5DB3);
						background-image: -o-linear-gradient(bottom,#0D98FB,#1A5DB3);   
						background-image: linear-gradient(to top,#0D98FB,#1A5DB3);
						cursor pointer


	.perfil
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 1

			img
				border-radius 50%
				width 50px
			
		.flechita
			background color_header
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 25px
			width 50%
			z-index 0 		

	.perfil
		.datos
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			float right
			text-decoration none
			margin 0 1.1em 0 0
	


nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		heigjt 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap

		li
			display inline-block

nav 
	a
		color white
		display block
		margin 0 0.5em
		padding 0 0.2em
		text-decoration none
	
		&:after
			content " -"

		&:before
			content "- "	

		&:hover
			background rgba(black,0.1)	

.posts
	padding 0.5em
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color color_texto
		margin-bottom 0.5em

.left
	float left

.right
	float right

@media screen and (min-width: 769px)

	header
		

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%	

