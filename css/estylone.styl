azul = #22BCE0
color_header = #800038
gris_oscuro = #444
gris_texto = #7A7A7A

a 
	color color_header 

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
		background color_header
		color rgba(white, 0.5)
		padding 1em 0
		text-align center
		width 100%

		h3
			font-size 14px
			font-weight normal

			a
				color rgba(white, 0.5) 

			strong
				display block
			.mejor
				&:before
				&:after
					content " "
						
header
	background color_header
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 55

	.logo

		width 175px

		img
			width 160px

	.buscador
		margin 0 80px 0 70px
		position relative



		.titulo
			font-size 18px
			font-weight normal
			margin 5px
			margin-left 20%
			padding 0
			font-style italic
			display inline-block
		
		.search
			margin-left 20%
			position relative
				
			#searchbox
				#search
					width: 190px;
					padding: 5px;
					border: 0;
					background: #eee;
					border-radius: 3px
					box-shadow: 0 1px 1px rgba(0,0,0,.4) inset;
					outline-color #3DC9FF
				#submit
					    background #0D98FB 
					    background-image -webkit-linear-gradient(top,#0D98FB,#1A5DB3)
					    background-image -moz-linear-gradient(top,#0D98FB,#1A5DB3)
					    background-image -o-linear-gradient(top,#0D98FB,#1A5DB3)  
					    background-image linear-gradient(to bottom,#0D98FB,#1A5DB3)   
					    border 1px solid #125CB5
					    -moz-border-radius 5px
					    -webkit-border-radius 5px
					    -o-border-radius 5px  
					    border-radius 5px
					    -moz-box-shadow 0 1px 1px #71C0FD inset
					    -webkit-box-shadow 0 1px 1px #71C0FD inset
					    -o-box-shadow 0 1px 1px #71C0FD inset 
					    box-shadow 0 1px 1px #71C0FD inset
					    padding .2em 1.5em
					    color white 
					    font-weight normal
					    text-decoration none
					    margin-top 2px

				#submit:hover
						background:#1A5DB3;
						background-image: -webkit-linear-gradient(bottom,#0D98FB,#1A5DB3);
						background-image: -moz-linear-gradient(bottom,#0D98FB,#1A5DB3);
						background-image: -o-linear-gradient(bottom,#0D98FB,#1A5DB3);   
						background-image: linear-gradient(to top,#0D98FB,#1A5DB3);
						cursor pointer


	.perfil
		position absolute
		right 10px
		top 45px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 1

			img
				border-radius 50%
				width 50px
			
		.flechita
			background color_header
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 25px
			width 50%
			z-index 0 		

	.perfil
		text-decoration none
		.text
			    border 1px solid #A20162
			    border-radius 4px 4px 4px 4px
			    color white
			    padding 8.5px
			    font-weight 700
			    text-shadow 0 1px 0 rgba(0,0,0,.5)
			    background #b9090b
			    background -moz-linear-gradient(top, #B10C68 1%, #850E47 100%)
			    background -webkit-gradient(linear, left top, left bottom, color-stop(1%,#B10C68), color-stop(100%,#850E47))
			    background -webkit-linear-gradient(top, #B10C68 1%,#850E47 100%)
			    background -o-linear-gradient(top, #B10C68 1%,#850E47 100%)
			    background -ms-linear-gradient(top, #B10C68 1%,#850E47 100%)
			    background linear-gradient(to bottom, #B10C68 1%,#850E47 100%)
	


nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute

nav 
	a
		color white
		display block
		margin 0 0.5em
		padding 0 0.2em
		text-decoration none
	
		&:after
			content " -"

		&:before
			content "- "	

		&:hover
			background rgba(black,0.1)	

.posts
	padding 0.5em
	background-image url(../imagenes/fondo2.jpg)
	background-repeat no-repeat
	background-size 100%
	background-position center
	overflow auto
	.post
		background transparent
		color color_texto
		margin-bottom 0.5em
		text-shadow 1px 2px 0 rgba(0,0,0,.4)

		.detalles
			padding 224px
			text-align center
			font-size 2.2em
			color #CE3C6B
		

.left
	float left

.right
	float right


@media screen and (max-width: 768px)

	header
		.buscador
			display inline-block
			margin-left 10px

		.logo
			img
				width 120px	

	.posts
		background-repeat repeat

		.post
			display inline-block
			verticar-align top
			.detalles
				padding 10px
	

